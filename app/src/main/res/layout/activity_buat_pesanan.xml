<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuatPesananActivity">

    <TextView
        android:id="@+id/Pesanan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="71dp" />

    <TextView
        android:id="@+id/staticPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Price"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/staticCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Category"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="170dp" />

    <TextView
        android:id="@+id/staticFoodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/staticPayMethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Method:"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="256dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="133dp"
        android:layout_height="63dp"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="288dp">

        <RadioButton
            android:id="@+id/cash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Via CASH" />

        <RadioButton
            android:id="@+id/cashless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Via CASHLESS" />
    </RadioGroup>

    <TextView
        android:id="@+id/textCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Promo Code"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="369dp" />

    <TextView
        android:id="@+id/staticTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Price"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="416dp" />

    <Button
        android:id="@+id/pesan"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:text="Order"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="568dp" />

    <Button
        android:id="@+id/hitung"
        android:layout_width="232dp"
        android:layout_height="44dp"
        android:text="Count"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="502dp" />

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="132dp" />

    <TextView
        android:id="@+id/food_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="170dp" />

    <TextView
        android:id="@+id/food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="416dp" />

    <EditText
        android:id="@+id/promo_code"
        android:layout_width="64dp"
        android:layout_height="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="369dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
